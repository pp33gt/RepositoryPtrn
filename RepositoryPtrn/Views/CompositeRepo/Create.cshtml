</div>




<span>Add SomeName and SomeNumber with equal value</span>
    <form asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="SomeName" class="control-label"></label>
            </div>
            <div class="col-md-4">
                <label asp-for="SomeNumber" class="control-label"></label>
            </div>
            <div class="col-md-4">
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input asp-for="SomeName" class="form-control" />
                    <span asp-validation-for="SomeName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input asp-for="SomeNumber" class="form-control" />
                    <span asp-validation-for="SomeNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>



