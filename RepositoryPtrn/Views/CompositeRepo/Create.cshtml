        </table>
    </div>
    <div class="col-md-6">
        <h2>Repo2</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>SomeName</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

